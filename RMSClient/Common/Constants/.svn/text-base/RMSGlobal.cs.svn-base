      public static Int32 Terminal_Id = 0;
      public static string LoginUserName = String.Empty;
      public static string m_rmsVersionNumber = "Version: 3.1.9";
      public static string m_phoneNumber = "There is no call";
      public static string m_CallerName = "There is no call";
      public static string m_CallerAddress = "There is no call";
      public static bool m_isCallAccepted = true;//By default true and ringing is stopped initially
      public static string m_comPortName = String.Empty;
      public static string m_connectionStatus = String.Empty;
